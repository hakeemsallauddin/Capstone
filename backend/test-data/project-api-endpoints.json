{
  "project_endpoints": {
    "base_url": "/api/v1/projects",
    "endpoints": [
      {
        "method": "GET",
        "path": "/api/v1/projects",
        "description": "Get all projects with pagination",
        "query_params": {
          "page": "Page number (default: 1)",
          "limit": "Items per page (default: 10, max: 100)",
          "status": "Filter by status (pending, active, completed)"
        },
        "auth": "None",
        "example_request": "GET /api/v1/projects?page=1&limit=5&status=active",
        "example_response": {
          "success": true,
          "data": [
            {
              "id": "proj-12345",
              "name": "Sample Project",
              "description": "A sample project description",
              "location": "Sample Location",
              "worker_need": 25,
              "start_date": "2023-07-01T00:00:00.000Z",
              "end_date": "2024-06-30T00:00:00.000Z",
              "status": "active",
              "created_by": 1,
              "created_at": "2023-06-01T10:00:00.000Z",
              "updated_at": "2023-06-01T10:00:00.000Z"
            }
          ],
          "meta": {
            "total": 1,
            "page": 1,
            "limit": 5,
            "totalPages": 1
          }
        }
      },
      {
        "method": "GET",
        "path": "/api/v1/projects/:id",
        "description": "Get a specific project by ID",
