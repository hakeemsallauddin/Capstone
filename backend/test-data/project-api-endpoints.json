      {
        "method": "POST",
        "path": "/api/v1/projects",
        "description": "Create a new project",
        "auth": "Admin or Supervisor role required",
        "headers": {
          "Authorization": "Bearer <token>",
          "Content-Type": "application/json"
        },
        "request_body": {
          "name": "string (required)",
          "description": "string (optional)",
          "location": "string (optional)",
          "worker_need": "integer (required)",
          "start_date": "ISO date string (required)",
          "end_date": "ISO date string (required)",
          "status": "enum: pending|active|completed (optional, default: pending)"
        },
        "example_request": {
          "name": "New Road Construction Project",
          "description": "Construction of rural roads",
          "location": "Rajasthan, India",
          "worker_need": 50,
          "start_date": "2023-07-01",
          "end_date": "2024-06-30",
          "status": "pending"
        },
        "example_response": {
          "success": true,
          "data": {
            "id": "proj-67890",
